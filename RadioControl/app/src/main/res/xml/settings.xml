<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="General Settings">
        <MultiSelectListPreference
            android:key="ssid"
            android:title="Network Settings"
            android:dialogTitle="Network Settings"
            android:defaultValue="@array/empty_array"
            android:summary="Do not enable airplane mode when connected to the selected networks"
            />
        <Preference
            android:key="clear-ssid"
            android:title="Clear Network Settings"
            android:defaultValue="@array/empty_array"
            android:summary="Clear the disabled networks list"
            />
        <CheckBoxPreference
            android:key="isNetworkAlive"
            android:title="Enable no internet alert"
            android:summary="Opens a dialog letting you know that the current network is not connected to the internet"
            android:defaultValue="false" />
        <PreferenceScreen
            android:key="button_network_key"
            android:title="Alert Settings"
            android:persistent="false">

            <CheckBoxPreference
                android:key="networkVibrate"
                android:title="Enable vibrate"
                android:summary="Enables vibrate on alerts"
                android:defaultValue="false" />
            <CheckBoxPreference
                android:key="networkSound"
                android:title="Enable sounds"
                android:summary="Enables sounds on alert"
                android:defaultValue="false" />
            <CheckBoxPreference
                android:key="networkPriority"
                android:title="Enable Heads-up"
                android:summary="Enables heads-up notifications"
                android:defaultValue="false" />
        </PreferenceScreen>

    </PreferenceCategory>
</PreferenceScreen>