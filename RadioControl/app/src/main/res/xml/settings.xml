<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Experimental Features">
        <MultiSelectListPreference
            android:key="ssid-curr"
            android:title="Network Settings (Disabled)"
            android:dialogTitle="Network Settings (Experimental)"
            android:defaultValue="@array/empty_array"
            android:summary="Do not enable airplane mode when connected to the selected networks"
            />
        <Preference
            android:key="clear-ssid"
            android:title="Clear Network Settings (Disabled)"
            android:defaultValue="@array/empty_array"
            android:summary="Clear the disabled networks list"
            />
    </PreferenceCategory>
    <PreferenceCategory android:title="Alert Settings">
        <CheckBoxPreference
            android:key="isNetworkAlive"
            android:title="Enable internet access alert"
            android:summary="Shows a notification when the current WiFi network is not connected to the internet (EXPERIMENTAL)"
            android:defaultValue="false" />
        <PreferenceScreen
            android:key="button_network_key"
            android:title="Notification Settings"
            android:persistent="false">

            <CheckBoxPreference
                android:key="networkVibrate"
                android:title="Enable vibrate"
                android:summary="Enables vibrate on alerts"
                android:defaultValue="false" />
            <CheckBoxPreference
                android:key="networkSound"
                android:title="Enable sounds"
                android:summary="Enables sounds on alert"
                android:defaultValue="false" />
            <CheckBoxPreference
                android:key="networkPriority"
                android:title="Enable Heads-up"
                android:summary="Enables heads-up notifications"
                android:defaultValue="false" />
        </PreferenceScreen>
    </PreferenceCategory>
    <PreferenceCategory android:title="Logging Settings">
        <CheckBoxPreference
            android:key="enableLogs"
            android:title="Enable Logging"
            android:summary="This will log all wifi switching actions and place it into a text file"
            android:defaultValue="false" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Ad Settings">
        <CheckBoxPreference
            android:key="disableAds"
            android:title="Disable Ads"
            android:summary="Face it, we all hate ads"
            android:defaultValue="false" />
    </PreferenceCategory>



</PreferenceScreen>